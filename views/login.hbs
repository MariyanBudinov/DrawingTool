<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="/stylesheets/loginStyle.css">
    <link rel="stylesheet" href="/normalize-css/normalize.css">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="application/x-font-ttf" href="/bootstrap/dist/fonts/glyphicons-halflings-regular.ttf">

    <title>Login</title>

</head>

<body style="background-image:url(/images/background.jpg)">
    <header class="container">
        <form action="/login" method="post" class="form-singin col-lg-5 col-md-6 col-sm-6 col-xs-12">
            <h1 class="form-signin-heading" style="text-align: center">Welcome to Drawing Tool!</h1>
            <div class="form-group">
                <label for="exampleInputEmail1" class="sr-only">Email address</label>
                <input type="text" class="form-control" name="username" id="exampleInputUsername" placeholder="Username" required autofocus>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" class="sr-only">Password</label>
                <input type="password" class="form-control" name="password" id="exampleInputPassword" placeholder="Password" required>
            </div>
            <div class="form-group">
                <button class="btn btn-large btn-success col-md-5 col-sm-5 col-lg-5 col-xs-5">Sign in</button>

                <a id="fbLogin" class="loginButtons btn btn-large btn-primary" href="./auth/facebook">Login with Facebook</a>
            </div>

        </form>
        <div id="registrationContainer" class="form-singin col-lg-5 col-md-6 col-sm-6 col-xs-12" style="margin-top: 5px;">
            <a class="col-md-12 col-sm-12 col-lg-12 col-xs-12 btn btn-large btn-success" id="registerButton" href="../register">
                    Don't have an account? Click here
            </a>
            <div class='form-group error col-md-12 col-sm-12 col-xs-12 col-lg-12' style="color:white;">
                {{message}}
            </div>
        </div>


    </header>



</body>

<script src="/jquery/dist/jquery.min.js"></script>
<script>
    window.fbAsyncInit = function () {
        FB.init({
            appId: '1487666597973757',
            cookie: true,
            xfbml: true,
            version: 'v2.8'
        });
        FB.AppEvents.logPageView();
        //FB.getLoginStatus(function (response) {
        //  statusChangeCallback(response);
        //});
        FB.getLoginStatus(function (response) {
            if (response.status === 'connected') {
                console.log(response.authResponse.accessToken);
            }
        });
    };

    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) { return; }
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

</script>

</html>